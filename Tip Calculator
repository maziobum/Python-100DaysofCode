greeting = "Welcome to the tip calculator."

print(greeting)

totalbill = int(input("What was the total bill? "))

perc_tip = int(
  input("What percentage tip would you like to give?  10, 12, or 15? "))

split_by = int(input("How many people to split the bill? "))

tip = float(totalbill * perc_tip / 100)

to_pay = round((totalbill + tip) / split_by, 2)

to_pay = "{:.2f}".format(to_pay)

final_message = f"Each person should pay: {to_pay}"

print(final_message)
